@model IEnumerable<StudentGuidence.Models.Article>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<h1 class="container text-center py-5">Article Table</h1>
<form class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <a asp-action="Create" class="float-right btn btn-primary font-weight-bold text-capitalize">

        <img src="~/img/Icon/add_50px.png" />
        Create Article
    </a>
    <table class="table table-bordered border-success">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Data Of Issue</th>
            <th>Image</th>
            <th></th>
        </tr>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Description</td>
                <td>@article.DateOfIssue.ToString("d")</td>
                <td>
                    <img src="@article.ImageUrl" style="width:140px; height:140px;" />
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@article.Id" class="mx-2">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@article.Id">
                        <i class="bi bi-pencil-square "></i>

                    </a>
                </td>
            </tr>
        }
    </table>
</form>