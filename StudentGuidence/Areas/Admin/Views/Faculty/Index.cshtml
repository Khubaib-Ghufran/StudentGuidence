@model IEnumerable<StudentGuidence.Models.Faculty>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<h1 class="container text-center py-5">Faculty Table</h1>
<form class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <a asp-action="Create" class="float-right btn btn-primary font-weight-bold text-capitalize">

        <img src="~/img/Icon/add_50px.png" />
        Create Faculty
    </a>
    <table class="table table-bordered border-success">
        <tr>


            <th>Name</th>
            <th>History</th>
            <th>Pre Requirement</th>
            <th>Image</th>
        </tr>
        @foreach (var faculty in Model)
        {
            <tr>
                <td>@faculty.Name</td>
                <td>@faculty.History</td>
                <td>@faculty.PreRequirment</td>
                <td>
                    <img src="@faculty.ImageUrl" style="width:140px; height:140px;" />
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@faculty.Id" class="mx-2">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@faculty.Id">
                        <i class="bi bi-pencil-square "></i>

                    </a>
                </td>
            </tr>
        }
    </table>
</form>