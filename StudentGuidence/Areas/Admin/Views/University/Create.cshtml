@model StudentGuidence.Models.University
@{
    ViewData["Title"] = "Create";
}
<hr />
<form method="post" asp-controller="University" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create University</h2>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Province"></label>
            <input asp-for="Province" class="form-control" />
            <span asp-validation-for="Province" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Establishment"></label>
            <input asp-for="Establishment" class="form-control" />
            <span asp-validation-for="Establishment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-success" style="width:150px">
            Create
            <img src="~/img/Icon/add25px.png" />

        </button>
        <a asp-action="Index" class="btn btn-outline-primary" style="width:150px;">
            <img src="~/img/Icon/back_50px.png" />
            Back to List
        </a>
    </div>
</form>


@{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success("Welcom");
    </script>
}



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}